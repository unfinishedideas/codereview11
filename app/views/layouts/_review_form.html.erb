<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
<%= f.hidden_field :author, :value => @user.username %>
<%= f.hidden_field :user_id, :value => @user.id %>
<h3>Author: <%=@user.username%></h3>
<br>
<%= f.label :rating %>
<%= f.text_field :rating %>
<br>
<%= f.label "Review" %>
<br>
<%= f.text_area :content_body %>
<hr>
<p><%= f.submit %></p>
<% end %>
