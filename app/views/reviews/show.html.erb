<div class="itembox">
  <h2>Review for: <span class="product_name"><%= @product.name %></span></h2>
  <h3>Author: <span class="author_name"><%= @review.author %></span></h3>
  <h3>Rating: <span class="rating_text"><%= @review.rating %></span></h3>
  <p><%= @review.content_body %></p>

  <p><%= link_to "Edit review", edit_product_review_path(@product, @review) %></p>

  <p>
    <%=
    link_to "Delete review", product_review_path(@product, @review),
    :data => {:confirm => "Are you sure?",
    :method => "delete"}
    %>
  </p>

  <p><%= link_to "Return to product", product_path(@product) %></p>
</div>
